<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/yellow</item>
        <item name="android:colorPrimaryDark">#ff070707</item>
        <item name="android:colorAccent">#ff0000</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
    </style>

    <style name="AppTheme.Dark" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/yellow</item>
        <item name="android:colorPrimaryDark">#060049</item>
        <item name="android:colorAccent">#ff0000</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
    </style>
</resources>